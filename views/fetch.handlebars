<h1>Fetch-Demo mit async/await</h1>


<div class="output-users"></div>

<script>
    async function fetchUsers(){
        const resp = await fetch('https://jsonplaceholder.typicode.com/users')
        const data = await resp.json();
        console.log(data);

        let users = data.map(item => {
          return `<li>${item.name}</li>`;
        });
        let usersNoComma = users.join('');
        const userlist = `<ul>${usersNoComma}</ul>`;
        document.querySelector('.output-users').innerHTML = userlist;
    }
    fetchUsers();
</script>
